<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text -->
    <style name="Text" parent="android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="Text.Light" parent="Text">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="Text.Muted" parent="Text">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="Text.Light.Muted" parent="Text">
        <item name="android:textColor">@color/text_light_secondary</item>
    </style>

    <style name="Text.Primary" parent="Text">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Large.Muted" parent="Text.Muted">
        <item name="android:textSize">16sp</item>
    </style>


</resources>